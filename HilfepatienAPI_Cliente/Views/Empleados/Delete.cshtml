@model HilfepatienMvc.Models.Empleados

<!DOCTYPE html>
<html>

<head>
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/images/LOGOTIPO.png" />
    <title>Empleados</title>
</head> 
<body background="~/images/fondo1.jpg">
    <fieldset>
        <center><h3>¿Estas seguro que deseas eliminar al emleado?</h3></center>


        <div class="display-label">
            <label>Nombre completo:     </label>

            @Html.DisplayFor(model => model.Nombre)
        </div>
        <br />
        <div class="display-label">
            <label>Puesto que trabaja:    </label>

            @Html.DisplayFor(model => model.Puesto)
        </div>
        <br />
        <div class="display-label">
            <label>Fecha de ingreso:   </label>

            @Html.DisplayFor(model => model.Fecha_Ingreso)
        </div>
        <br />
        <div class="display-label">
            <label>Sueldo actual:  </label>

            $@Html.DisplayFor(model => model.Sueldo)
        </div>
    </fieldset>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <p>
            <input type="submit" value="Delete" class="btn-danger" /> |
            @Html.ActionLink("Regresar a la lista principal", "Index")
        </p>
    }
</body>
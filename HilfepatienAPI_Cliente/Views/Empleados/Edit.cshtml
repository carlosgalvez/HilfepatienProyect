@model HilfepatienAPI_Cliente.ViewModels.EmpleadosViewModel

<!DOCTYPE html>
<head>
<link href="~/css/bootstrap.css" rel="stylesheet" />
<link href="~/css/styles.css" rel="stylesheet" />
    </head>
<body background="~/images/fondo1.jpg">

    @using (Html.BeginForm("Edit", "Empleados", FormMethod.Post))
    {


        <fieldset>
            <center><legend>Empleados</legend></center>

            @Html.HiddenFor(model => model.Empleados.Id)

            <div class="editor-label">
                <label>Nombre completo: </label>
                @Html.EditorFor(model => model.Empleados.Nombre)
                @Html.ValidationMessageFor(model => model.Empleados.Nombre)
            </div>

            <div class="editor-label">
                <label>Puesto: </label>
                @Html.EditorFor(model => model.Empleados.Puesto)
                @Html.ValidationMessageFor(model => model.Empleados.Puesto)
            </div>

            <div class="editor-label">
                <label>Fecha de ingreso: </label>
                @Html.EditorFor(model => model.Empleados.Fecha_Ingreso)
                @Html.ValidationMessageFor(model => model.Empleados.Fecha_Ingreso)
            </div>

            <div class="editor-label">
                <label>Sueldo mensual: </label>
                @Html.EditorFor(model => model.Empleados.Sueldo)
                @Html.ValidationMessageFor(model => model.Empleados.Sueldo)
            </div>
            <br />
            <p>
                <input type="submit" value="Save" class="btn-success" /> @Html.ActionLink("Back to List", "Index")
            </p>
        </fieldset>
    }



</body>
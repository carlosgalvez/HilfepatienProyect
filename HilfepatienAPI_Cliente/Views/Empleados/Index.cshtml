

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <a href="@Url.Action("Create","Empleados")">Agregar nuevo empleado</a>
        <table  border="0">
           <tr> <th>Nombre completo</th>
               <th>Puesto que realiza</th>
             <th>Fecha de ingreso</th>
            
            <th>Sueldo Mensual</th>
            </tr>
            @foreach (var empleados in ViewBag.listEmpleados)
            { <tr> 
            <td>@empleados.Nombre</td>
            <td>@empleados.Puesto</td>
            <td>@empleados.Fecha_Ingreso.ToString("dd/MM/yyyy")</td>
            <td>@empleados.Sueldo</td>
            <td><a onclick=" return confirm('¿Estas seguro/a?')" href="@Url.Action("Delete", "Empleados", new { id = empleados.Id})">Eliminar</a>
                <a  href="@Url.Action("Edit", "Empleados", new { id = empleados.Id})">Editar</a></td>
            </tr>
            }

        </table> 
    </div>
</body>
</html>
